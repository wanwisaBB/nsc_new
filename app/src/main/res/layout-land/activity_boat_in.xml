<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rmutr.boonsathain.wanwisa.ncs1.BoatIn"
    android:background="@drawable/a">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="บันทึกการแจ้งข้อมูลเรือ"
                android:id="@+id/textView43" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ชื่อเรือ/แพปลา"
                    android:id="@+id/textView44"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />

                <EditText
                    android:layout_width="@dimen/edittext1"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText34"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:inputType="text"
                    android:paddingTop="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ที่อยู่"
                    android:id="@+id/textView45"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />

                <EditText
                    android:layout_width="@dimen/edittext1"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText35"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:inputType="text"
                    android:paddingTop="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="จังหวัด"
                    android:id="@+id/textView46"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />

                <EditText
                    android:layout_width="@dimen/edittext1"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText36"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:inputType="text"
                    android:paddingTop="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="วันที่แจ้งเรือเข้า"
                    android:id="@+id/textView49" />

                <EditText
                    android:layout_width="@dimen/edittext2"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText39"
                    android:inputType="text"
                    android:paddingTop="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เวลาที่แจ้งเข้า"
                    android:id="@+id/textView50" />

                <EditText
                    android:layout_width="@dimen/edittext2"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText40"
                    android:inputType="text"
                    android:paddingTop="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ชนิดสัตว์น้ำที่จับได้"
                    android:id="@+id/textView51" />

                <EditText
                    android:layout_width="@dimen/edittext2"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText41"
                    android:inputType="text"
                    android:paddingTop="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="จำนวน"
                    android:id="@+id/textView52" />

                <EditText
                    android:layout_width="@dimen/edittext2"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText42"
                    android:inputType="text"
                    android:paddingTop="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รายละเอียด"
                    android:id="@+id/textView53" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText43" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รายชื่อผู่ควบคุมเรือ"
                    android:id="@+id/textView54" />

                <EditText
                    android:layout_width="@dimen/edittext2"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText44"
                    android:inputType="text"
                    android:paddingTop="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="หมายเลยประจำตัวผู้คุมเรือ"
                    android:id="@+id/textView55" />

                <EditText
                    android:layout_width="@dimen/edittext2"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText45"
                    android:inputType="text"
                    android:paddingTop="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="บันทึก"
                    android:id="@+id/button9"
                    android:onClick="boatInSave" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ล้างข้อมูล"
                    android:id="@+id/button10"
                    android:onClick="boatInClearText" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เรียกดู"
                    android:id="@+id/button11"
                    android:onClick="boatInView" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
